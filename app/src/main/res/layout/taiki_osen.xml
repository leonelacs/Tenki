<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/AQISquare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f7d94c"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/AQIUpdateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2014-05-09 14:00"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AQI"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="0dp"/>

            <TextView
                android:id="@+id/MokuzenAQIValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="98"
                android:textSize="80dp"
                android:gravity="center"
                android:layout_marginTop="-15dp"
                android:textStyle=""/>

            <TextView
                android:id="@+id/MokuzenAQIWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="良"
                android:textSize="40dp"
                android:gravity="center"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="30">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PM 2.5"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="#DC9FB4"/>
                    <TextView
                        android:id="@+id/PM25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="73"
                        android:gravity="center"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:textColor="#DC9FB4"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="30">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PM 10"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="#DC9FB4"/>
                    <TextView
                        android:id="@+id/PM10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:gravity="center"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:textColor="#DC9FB4"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="30">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="一氧化碳"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="#DC9FB4"/>
                    <TextView
                        android:id="@+id/CO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.79"
                        android:gravity="center"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:textColor="#DC9FB4"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="30">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="二氧化氮"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="#DC9FB4"/>
                    <TextView
                        android:id="@+id/NO2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="65"
                        android:gravity="center"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:textColor="#DC9FB4"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="30">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="臭氧"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="#DC9FB4"/>
                    <TextView
                        android:id="@+id/O3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="28"
                        android:gravity="center"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:textColor="#DC9FB4"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="30">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="二氧化硫"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="#DC9FB4"/>
                    <TextView
                        android:id="@+id/SO2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="41"
                        android:gravity="center"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:textColor="#DC9FB4"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>